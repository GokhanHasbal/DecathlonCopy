@using Decathlon.AdminModel;
@model ProductModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-12 mb-3">
                                    <h4 class="mt-0 header-title">@Model.SingleProduct.Name - Product Comment List</h4>
                                    <p class="text-muted font-14 mb-3 float-start">
                                        Sitede bulunan ürüne yapılan yorumların listesi
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap table-sm">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Date</th>
                                                <th>User Name</th>
                                                <th>View</th>
                                                <th>Status</th>
                                                <th>Setting</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var comment in Model.ProductComment)
                                            {
                                                i++;

                                            <tr>
                                                <td>@i</td>
                                                <td>@comment.Date</td>
                                                <td>@comment.User.Name</td>
                                                @{
                                                    var view = comment.View == false ? "fa-eye-slash" : "fa-eye";
                                                    var viewbtn = comment.View == false ? "btn-warning" : "btn-success";
                                                }
                                                <td><a class="btn @viewbtn"><i class="fa @view"></i></a></td>
                                                
                                                @{var status = comment.Status == true ? "btn-success" : "btn-danger"; }
                                                <td><a class="btn  @status">@comment.Status</a></td>

                                                <td>
                                                    <a href="~/Product/CommentDetail?id=@comment.Id" class="btn btn-success"><i class="mdi mdi-comment"></i> Comment</a>
                                                    <a href="~/Product/CommentDelete?id=@comment.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

