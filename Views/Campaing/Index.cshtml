@using Decathlon.Models;
@model List<Campaing>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}



<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">



            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-12 mb-3">
                                    <h4 class="mt-0 header-title">Campaing List</h4>
                                    <p class="text-muted font-14 mb-3 float-start">
                                        Sitede bulunan kampanyalar listesi
                                    </p>
                                    <a class="btn btn-success float-end" href="~/Campaing/Add"><i class="fa fa-plus"></i> Campaing Add</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Campaing Image</th>
                                                <th>Campaing Name</th>
                                                <th>Discount</th>
                                                <th>Start Date</th>
                                                <th>Stop Date</th>
                                                <th>Status</th>
                                                <th>Setting</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var campaing in Model)
                                            {
                                                i++;

                                            <tr>
                                                <td>@i</td>
                                                @{
                                                    string image = string.IsNullOrEmpty(campaing.Image) ? "default-campaing.png" : campaing.Image;
                                                }
                                                <td><img src="~/Content/images/campaing/@image" width="40" /></td>
                                                <td>@campaing.Title</td>
                                                <td><a class="btn btn-success">@campaing.Discount %</a></td>
                                                <td><a class="btn btn-success">@campaing.StartDate </a></td>
                                                <td><a class="btn btn-success">@campaing.StopDate </a></td>

                                                @{var status = campaing.Status == true ? "btn-success" : "btn-danger"; }
                                                <td><a class="btn  @status">@campaing.Status</a></td>

                                                <td>
                                                    <a href="~/Campaing/Edit?id=@campaing.Id" class="btn btn-success"><i class="mdi mdi-account-star"></i></a>
                                                    <a href="~/Campaing/Delete?id=@campaing.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




