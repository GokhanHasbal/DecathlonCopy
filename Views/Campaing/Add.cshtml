
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Add Campaing</h4>
                            <p class="sub-header">
                                Kampanya Ekleme
                            </p>

                            <div class="row">
                                <div class="col-lg-6">
                                    <form method="post" action="~/Campaing/Add" enctype="multipart/form-data">

                                        <div class="mb-3">
                                            <label for="Title" class="form-label">Campaing Title</label>
                                            <input type="text" id="Title" name="Title" class="form-control" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="Description" class="form-label">Description</label>
                                            <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>

                                        </div>
                                        <div class="mb-3">
                                            <label for="Image" class="form-label">Campaing Image</label>
                                            <input type="file" id="Image" name="Image" class="form-control">
                                        </div>
                                        <div class="mb-3">
                                            <label for="Discount" class="form-label">Discount</label>
                                            <input type="number" step="0.1" max="100" id="Discount" name="Discount" class="form-control" required>
                                        </div>
                                        <div class="mb-3">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label for="StartDate" class="form-label">Start Date</label>
                                                    <input type="datetime-local" id="StartDate" name="StartDate" class="form-control" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="StopDate" class="form-label">Stop Date</label>
                                                    <input type="datetime-local" id="StopDate" name="StopDate" class="form-control" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="Link" class="form-label">Campaing Link</label>
                                            <input type="text"  id="Link" name="Link" class="form-control" required>
                                        </div>
                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="">
                                            <label class="form-check-label" for="customckeck1">Status</label>
                                        </div>

                                        <button class="btn btn-success" type="submit">Add New Campaing</button>
                                    </form>
                                </div> <!-- end col -->
                                <div class="col-md-6 text-center">
                                    <h3>Sisteme Yeni Kampanya Firması Ekleme</h3>
                                    <p>Bilgileri Eksiksiz Bir Şekilde Dodurunuz ve Boş Alan Bırakmayınız.</p>
                                    <h2>@ViewBag.mesaj</h2>
                                </div>
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>



