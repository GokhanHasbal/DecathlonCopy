@using Decathlon.Models;
@model Slider
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string resim = string.IsNullOrEmpty(Model.Image) ? "default-slider.png" : Model.Image;


}


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">@Model.Title - Slider Edit</h4>
                            <p class="sub-header">
                                Ürün Düzenleme
                            </p>
                            <div class="row mb-3">

                                <img src="~/Content/images/slider/@resim" width="50%" />
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post" action="~/Slider/Edit" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label for="Image" class="form-label">Image</label>
                                            <input type="file" id="Image" name="Image" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="Title" class="form-label">Title</label>
                                            <input type="text" id="Title" name="Title" class="form-control" required value="@Model.Title">
                                        </div>
                                        <div class="mb-3">
                                            <label for="Description" class="form-label">Description</label>
                                            <textarea id="Description" name="Description" class="form-control" required>
                                              @Model.Description                  
                                            </textarea>

                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="Link" class="form-label">Link</label>
                                            <input type="text" id="Link" name="Link" class="form-control" required value="@Model.Link">
                                        </div>
                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="@Model.Status">
                                            <label class="form-check-label" for="customckeck1">Status</label>
                                        </div>
                                        <input type="hidden" value="@Model.Id" name="Id" id="Id" />

                                        <button class="btn btn-success" type="submit">Edit Slider</button>
                                    </form>
                                </div> <!-- end col -->

                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#Description').summernote({ height: 300 });
    });
</script>




