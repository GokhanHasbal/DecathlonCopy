@using Decathlon.Models;
@model List<Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}



<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">



            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-12 mb-3">
                                    <h4 class="mt-0 header-title">Slider List</h4>
                                    <p class="text-muted font-14 mb-3 float-start">
                                        Sitede bulunan slider listesi
                                    </p>
                                    <a class="btn btn-success float-end" href="~/Slider/Add"><i class="fa fa-plus"></i> Slider Add</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Image</th>
                                                <th>Slider Title</th>
                                                <th>Status</th>
                                                <th>Setting</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var slider in Model)
                                            {
                                                i++;

                                                <tr>
                                                    <td>@i</td>
                                                    @{
                                                        string image = string.IsNullOrEmpty(slider.Image) ? "default-slider.png" : slider.Image;
                                                    }
                                                    <td><img src="~/Content/images/slider/@image" width="200" /></td>
                                                    <td>@slider.Title</td>
                                                    

                                                    @{var status = slider.Status == true ? "btn-success" : "btn-danger"; }
                                                    <td><a class="btn  @status">@slider.Status</a></td>

                                                    <td>
                                                        <a href="~/Slider/Edit?id=@slider.Id" class="btn btn-success"><i class="mdi mdi-account-star"></i></a>
                                                        <a href="~/Slider/Delete?id=@slider.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




