@using Decathlon.Models;
@model ContactMail
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title"><a href="~/ContactMail/">Contact Mails</a> - @Model.Name @Model.Surname</h4>


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <table class="table">

                                            <tr>
                                                <th>Date</th>
                                                <td>@Model.Date</td>
                                            </tr>
                                            <tr>
                                                <th>Email</th>
                                                <td>@Model.Email</td>
                                            </tr>
                                            <tr>
                                                <th>User Name</th>
                                                <td>@Model.Name @Model.Surname</td>
                                            </tr>
                                            <tr>
                                                <th>Phone</th>
                                                <td>@Model.Phone</td>
                                            </tr> 
                                            <tr>
                                                <th>Subject</th>
                                                <td>@Model.Subject</td>
                                            </tr>

                                            <tr>
                                                <th>Description</th>
                                                <td><textarea class="form-control" disabled>@Html.Raw(Model.Description)</textarea></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <form method="post" action="~/ContactMail/Detail">
                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="@Model.Status">
                                            <label class="form-check-label" for="customckeck1">Mail Status</label>
                                        </div>
                                        <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                                        <button class="btn btn-success" type="submit"><i class="fa fa-paper-plane"></i> Mail Change</button>
                                        <a href="~/ContactMail/Delete?id=@Model.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>

                                    </form>
                                </div> <!-- end col -->

                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>



