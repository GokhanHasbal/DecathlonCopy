@using Decathlon.AdminModel;
@model SupportModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}



<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">



            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-12 mb-3">
                                    <h4 class="mt-0 header-title">Support List</h4>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Subject</th>
                                                <th>User Name</th>
                                                <th>Date</th>
                                                <th>Support Status</th>
                                                <th>Status</th>
                                                <th>Setting</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var support in Model.Support)
                                            {
                                                i++;

                                                <tr>
                                                    <td>@i</td>

                                                    <td>@support.Subject</td>
                                                    <td>@support.User.Name @support.User.Surname</td>
                                                    <td>@support.Date</td>
                                                    <td>@support.SupportStatus</td>
                                                    @{var status = support.Status == true ? "btn-success" : "btn-danger"; }
                                                    <td><a class="btn  @status">@support.Status</a></td>

                                                    <td>
                                                        <a href="~/Support/Detail?id=@support.Id" class="btn btn-success"><i class="mdi mdi-account-star"></i></a>
                                                        <a href="~/Support/Delete?id=@support.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




