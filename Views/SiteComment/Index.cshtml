@using Decathlon.AdminModel;
@model SiteCommentModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}



<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">



            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-12 mb-3">
                                    <h4 class="mt-0 header-title">Site Comment List</h4>
                                    <p class="text-muted font-14 mb-3 float-start">
                                        Siteye yapılan yorumların listesi
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>User Name</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Setting</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var comment in Model.SiteComment)
                                            {
                                                i++;

                                            <tr>
                                                <td>@i</td>

                                                <td>@comment.User.Name @comment.User.Surname</td>
                                                <td>@comment.Date</td>
                                                @{var status = comment.Status == true ? "btn-success" : "btn-danger"; }
                                                <td><a class="btn  @status">@comment.Status</a></td>

                                                <td>
                                                    <a href="~/SiteComment/Detail?id=@comment.Id" class="btn btn-success"><i class="mdi mdi-account-star"></i></a>
                                                    <a href="~/SiteComment/Delete?id=@comment.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




