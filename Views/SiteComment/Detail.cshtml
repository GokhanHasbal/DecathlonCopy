@using Decathlon.AdminModel;
@model SiteCommentModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title"><a href="~/SiteComment/">Site Comments</a> - @Model.SingleSiteComment.User.Name @Model.SingleSiteComment.User.Surname</h4>


                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <table class="table">
                                            
                                            <tr>
                                                <th>Date</th>
                                                <td>@Model.SingleSiteComment.Date</td>
                                            </tr>
                                            <tr>
                                                <th>User Name</th>
                                                <td>@Model.SingleSiteComment.User.Name @Model.SingleSiteComment.User.Surname</td>
                                            </tr>
                                            
                                            
                                            <tr>
                                                <th>Comment</th>
                                                <td><textarea class="form-control" disabled>@Html.Raw(Model.SingleSiteComment.Comment)</textarea></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <form method="post" action="~/SiteComment/Detail">
                                        <div class="form-check mb-2 form-check-success">
                                            <input class="form-check-input" type="checkbox" value="true" id="Status" name="Status" checked="@Model.SingleSiteComment.Status">
                                            <label class="form-check-label" for="customckeck1">Publish Comment</label>
                                        </div>
                                        <input type="hidden" name="Id" id="Id" value="@Model.SingleSiteComment.Id" />
                                        <button class="btn btn-success" type="submit"><i class="fa fa-paper-plane"></i> Publish Comment</button>
                                        <a href="~/SiteComment/Delete?id=@Model.SingleSiteComment.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>

                                    </form>
                                </div> <!-- end col -->

                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
</div>



