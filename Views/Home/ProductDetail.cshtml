                                            {
                                                <div class="slide" data-thumb="/Content/images/product/@productimages.Image"><a href="~/Content/images/product/@productimages.Image" title="Pink Printed Dress - Side View" data-lightbox="gallery-item"><img src="~/Content/images/product/@productimages.Image" alt="Pink Printed Dress"></a></div>

                                            }

                                        </div>
                                    </div>
                                </div>
                                <div class="sale-flash badge bg-danger p-2">Sale!</div>
                            </div>
                        </div>
                        <div class="col-md-5 product-desc">
                            <div class="d-flex align-items-center justify-content-between">

                                <div class="product-price">
                                    <del>@Model.SingleProduct.Price.ToString("c")</del>
                                    <ins>@((Model.SingleProduct.Price-((Model.SingleProduct.Price/100)* Model.SingleProduct.Discount)).ToString("c"))</ins>
                                </div>

                                <div class="product-rating">
                                    @for (int i = 0; i < Model.SingleProduct.Rate; i++)
                                    {
                                        <i class="icon-star3 text-warning"></i>
                                    }
                                    @for (int i = 0; i < 5 - Model.SingleProduct.Rate; i++)
                                    {
                                        <i class="icon-star3 text-secondary"></i>
                                    }

                                </div>
                            </div>
                            <div class="line"></div>

                            <form class="cart mb-0 d-flex justify-content-between align-items-center" method="post" enctype='multipart/form-data' action="~/Cart/AddToCart">
                                <div class="quantity clearfix">
                                    <input type="button" value="-" class="minus">
                                    <input type="number" step="1" min="1" max="@Model.SingleProduct.Stock" name="quantity" id="quantity" value="1" title="Qty" class="qty" />
                                    <input type="button" value="+" class="plus">
                                    <input type="hidden" id="id" name="id" value="@Model.SingleProduct.Id" />
                                </div>
                                <button type="submit" class="add-to-cart button m-0">Add to cart</button>
                            </form>
                            <div class="line"></div>

                            <p>@Html.Raw(Model.SingleProduct.Description)</p>

                            <ul class="iconlist">
                                <li><i class="icon-caret-right"></i> Dynamic Color Options</li>
                                <li><i class="icon-caret-right"></i> Lots of Size Options</li>
                                <li><i class="icon-caret-right"></i> 30-Day Return Policy</li>
                            </ul>

                            <div class="card product-meta">
                                <div class="card-body">
                                    <span itemprop="productID" class="sku_wrapper">SKU: <span class="sku">8465415</span></span>
                                    <span class="posted_in">Category: <a href="#" rel="tag">Dress</a>.</span>
                                    <span class="tagged_as">Tags: <a href="#" rel="tag">Pink</a>, <a href="#" rel="tag">Short</a>, <a href="#" rel="tag">Dress</a>, <a href="#" rel="tag">Printed</a>.</span>
                                </div>
                            </div>

