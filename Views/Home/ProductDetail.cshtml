                                                        <div id="comment-1" class="comment-wrap clearfix">
                                                            <div class="comment-meta">
                                                                <div class="comment-author vcard">
                                                                    <span class="comment-avatar clearfix">
                                                                        <img alt='Image' src='~/Content/images/users/@commentUserImage' height='60' width='60' />
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="comment-content clearfix">
                                                                <div class="comment-author">@comment.User.Name @comment.User.Surname<span><a href="#" title="Permalink to this comment">@comment.Date</a></span></div>
                                                                <p>@comment.Comment</p>
                                                                <div class="review-comment-ratings">
                                                                    @for (int i = 0; i < comment.Rate; i++)
                                                                    {
                                                                        <i class="icon-star3 text-warning"></i>
                                                                    }
                                                                    @for (int i = 0; i < 5 - comment.Rate; i++)
                                                                    {
                                                                        <i class="icon-star3 text-secondary"></i>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <div class="clear"></div>
                                                        </div>
                                                    </li>
                                                }
                                            </ol>
                                            @if (User.IsInRole("Admin") || User.IsInRole("User"))
                                            {
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#reviewFormModal" class="button button-3d m-0 float-end">Add a Review</a>
                                                <div class="modal fade" id="reviewFormModal" tabindex="-1" role="dialog" aria-labelledby="reviewFormModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title" id="reviewFormModalLabel">Submit a Review</h4>
                                                                <button type="button" class="btn-close btn-sm" data-bs-dismiss="modal" aria-hidden="true"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form class="row mb-0" id="template-reviewform" name="template-reviewform" action="~/Product/AddComment" method="post">
                                                                    <div class="col-12 mb-3">
                                                                        <label for="template-reviewform-name">Name <small>*</small></label>
                                                                        <div class="input-group">
                                                                            <div class="input-group-text"><i class="icon-user"></i></div>
                                                                            <input type="text" id="UserId" name="UserId" value="1" class="form-control required" />
                                                                        </div>
                                                                    </div>

                                                                    <div class="w-100"></div>
                                                                    <div class="col-12 mb-3">
                                                                        <label for="template-reviewform-rating">Rating</label>
                                                                        <select id="Rate" name="Rate" class="form-select">
                                                                            <option value="0">-- Select One --</option>
                                                                            <option value="1">1</option>
                                                                            <option value="2">2</option>
                                                                            <option value="3">3</option>
                                                                            <option value="4">4</option>
                                                                            <option value="5">5</option>
                                                                        </select>
                                                                    </div>
                                                                    <div class="w-100"></div>
                                                                    <div class="col-12 mb-3">
                                                                        <label for="template-reviewform-comment">Comment <small>*</small></label>
                                                                        <textarea class="required form-control" id="Comment" name="Comment" rows="6" cols="30"></textarea>
                                                                        <input type="hidden" id="ProductId" name="ProductId" value="@Model.SingleProduct.Id" />
                                                                    </div>
                                                                    <div class="col-12">
                                                                        <button class="button button-3d m-0" type="submit" id="template-reviewform-submit" name="template-reviewform-submit" value="submit">Submit Review</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-danger" role="alert">
                                                    <i class="icon-info-circle">
                                                        
                                                    </i><p>Lütfen Yorum Yapmak İçin Giriş Yapınız</p>
                                                    <a class="btn btn-danger" href="~/Admin/Login">Giriş Yap</a>
                                                </div>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
